generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid()) @db.Uuid
  name             String    @db.VarChar(80)
  email            String    @unique @db.VarChar(255)
  password         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  createdRooms     Room[]    @relation("RoomCreator")
}

model Room {
  id        String    @id @default(uuid()) @db.Uuid
  name      String    @db.VarChar(100)
  isPrivate Boolean   @default(false)
  createdAt DateTime  @default(now())
  creatorId String?   @db.Uuid
  creator   User?     @relation("RoomCreator", fields: [creatorId], references: [id], onDelete: SetNull)
  messages  Message[]

  @@index([createdAt(sort: Desc)])
}

model Message {
  id         String   @id @default(uuid()) @db.Uuid
  content    String   @db.Text
  fileUrl    String?  @db.VarChar(500)
  senderId   String   @db.Uuid
  roomId     String?  @db.Uuid
  receiverId String?  @db.Uuid
  createdAt  DateTime @default(now())
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  room       Room?    @relation(fields: [roomId], references: [id], onDelete: SetNull)
  receiver   User?    @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: SetNull)

  @@index([roomId, createdAt(sort: Desc)])
  @@index([receiverId, createdAt(sort: Desc)])
  @@index([senderId, createdAt(sort: Desc)])
}
